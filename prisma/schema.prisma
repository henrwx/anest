generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PatientStatus {
  Active
  Churned
  Inquiry
  Onboarding
}

model Address {
  id          Int      @id @default(autoincrement())
  patient     Patient? @relation(fields: [patientId], references: [id])
  patientId   Int?
  streetLine1 String
  streetLine2 String?
  city        String
  state       String
  zip         String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Patient {
  id          Int           @id @default(autoincrement())
  firstName   String
  middleName  String?
  lastName    String
  dateOfBirth DateTime
  addresses   Address[]
  status      PatientStatus
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}
